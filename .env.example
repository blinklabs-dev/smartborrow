# =============================================================================
# SmartBorrow AI Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys and configurations

# =============================================================================
# LLM Provider API Keys (Sessions 1-2, 5-6)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# LangSmith Configuration (Session 4)
# =============================================================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=smartborrow-aie7

# =============================================================================
# Vector Database Configuration (Sessions 3-4, 9)
# =============================================================================
# ChromaDB
CHROMA_DB_IMPL=duckdb+parquet
CHROMA_PERSIST_DIRECTORY=./data/chromadb

# Qdrant (if using cloud)
QDRANT_URL=your_qdrant_url_here
QDRANT_API_KEY=your_qdrant_api_key_here

# =============================================================================
# Financial Data APIs
# =============================================================================
# Alpha Vantage (financial market data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# Application Configuration
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# Model Configuration
# =============================================================================
# Default models for different tasks
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
DEFAULT_RERANK_MODEL=rerank-english-v2.0

# Model parameters
DEFAULT_TEMPERATURE=0.1
DEFAULT_MAX_TOKENS=4000
DEFAULT_TOP_P=0.9

# =============================================================================
# RAG Configuration (Sessions 3-4, 8-9)
# =============================================================================
# Chunking
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200

# Retrieval
DEFAULT_RETRIEVAL_K=5
DEFAULT_RERANK_K=3
ENABLE_HYBRID_SEARCH=true

# =============================================================================
# Evaluation Configuration (Sessions 7-8)
# =============================================================================
# RAGAS evaluation
RAGAS_SAMPLE_SIZE=100
RAGAS_TIMEOUT=300

# Synthetic data generation
SYNTHETIC_DATA_SIZE=500
